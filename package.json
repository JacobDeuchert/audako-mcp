{
  "name": "audako-mcp-gateway",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for the Audako MCP server, chat UI, and backend bridge.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "test": "npm run test --workspaces",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "check": "biome check ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
